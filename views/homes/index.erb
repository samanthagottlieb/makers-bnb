<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/yegor256/tacit@gh-pages/tacit-css-1.5.1.min.css"/>
</head>

<h1> Homes to rent 🏘</h1>

<form action="/sessions/new" method="get">
  <input type="submit" value="Log in" />
</form>

<a href="/homes/new" >Add home➕</a>

<ul>
  <% @homes.each do |home| %>
    <li><%= home.name.capitalize %>🏡<br>
      <%= home.description.capitalize  %> £<%= home.price %> per night
      <form method="get" action="/homes/availability">
        <button name="<%= home.id %>" type="submit">Check Availability</button>
      </form>
      </li>
  <% end %>
</ul><br><br><br><br><br>


<form action="/sessions/destroy" method="post">
  <input type="submit" value="Log out" />
</form>

<h2>
  <%= flash[:notice] %>
</h2>

<div style="position: absolute; top: 50; right: 50; width: 100px; text-align:right;">
    <% if session[:username] == nil %>
      You are not logged in...
    <% else %>
      Logged in as: <%= session[:username] %>
    <% end %>
  </div>