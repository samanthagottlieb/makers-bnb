<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/yegor256/tacit@gh-pages/tacit-css-1.5.1.min.css"/>
</head>

<form method="post" action="/homes">
  <input type="text" name="name" placeholder="Name" />
  <input type="text" name="description" placeholder="Description" />
  <input type="text" name="price" placeholder="Price per night" />


  <label for="start_date">Start date:</label>
  <input type="date" name="start_date">

  <label for="end_date">End date:</label>
  <input type="date" name="end_date">

  <input type="submit" value="Submit" />
</form>

<div style="position: absolute; top: 50; right: 50; width: 100px; text-align:right;">
    <% if session[:username] == nil %>
      You are not logged in...
    <% else %>
      Logged in as: <%= session[:username] %>
    <% end %>
</div>
